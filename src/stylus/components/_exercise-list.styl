#exercise-list
  ul
    list-style-type: none
    padding: 0
    margin: 0

  h1, p
    text-align: center
    
  .exercise-item
    text-align: left
    padding: 0
    background-color: #ccc
    margin-bottom: 1px
    position: relative
    cursor: pointer

    .exercise-item-number
      font-size: 25px
      padding: 20px 25px
      display: inline-block
      background-color: #666
      margin-right: 10px

    .exercise-item-arrow
      position: absolute
      right: 0
      padding-right: 5px
      font-size: 30px
      top: 50%
      transform: translateY(-50%)
