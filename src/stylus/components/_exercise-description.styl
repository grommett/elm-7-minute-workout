#exercise-description
  position: fixed
  top: 0
  left: 100%
  opacity: 0
  height: 100%
  transform: translate3d(0, 0, 0)
  transition: transform 0.2s ease-out, opacity .3s
  &.open
    transform: translate3d(-100%, 0, 0)
    opacity: 1
  header
    position: absolute
    z-index: 10
    box-sizing: border-box
    width: 100%

    h2
      margin: 0
      text-align: center

  header, p
    padding: 20px
  .exercise-description-close
    cursor: pointer
    background-color: #D15419
    border-radius: 10px
    width: 20px
    height: 20px
    text-align: center
    line-height: 22px
    top: 50%
    transform: translateY(-50%)
    position: absolute
    right: 20px

  .video-container
    position: relative
    padding-top: 54.15%
    display: block
    width: 100%
    overflow: hidden

    .video
      border : none
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

for key in colorList
  #exercise-description.{key}
    header
      background-color: colorList[key].color
    .exercise-description-close, .video-container
      background-color: colorList[key].numColor
