#exercise-list
  left: 0%
  position: absolute
  top: 0
  width: 100%
  float: left
  text-align: center

  ul
    list-style-type: none
    padding: 0
    margin: 0

  button
    margin-top: 20px
    width: 50%
    background-color: #b3b3b3
    border: none
    padding: 10px 10px
    font-family: sans-serif
    font-size: 14px
    border-radius: 2px
    cursor: pointer
    color: #fff
  .exercise-item
    text-align: left
    padding: 0
    background-color: #ccc
    margin-bottom: 1px
    position: relative
    cursor: pointer

    .exercise-item-number
      font-size: 25px
      padding: 20px 25px
      display: inline-block
      background-color: #666
      margin-right: 10px

    .exercise-item-arrow
      position: absolute
      right: 0
      padding-right: 5px
      font-size: 30px
      top: 50%
      transform: translateY(-50%)
