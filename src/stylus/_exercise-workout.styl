#exercise-workout.open
  transform: translateY(0%)
#exercise-workout
  position: absolute
  background-color: #3b3b3b
  width: 100%
  height: 100%
  text-align: center
  transform: translateY(100%)
  transition:transform .2s ease-out

  header
    padding: 20px 0
    background-color: blue

  .exercise-workout-counter
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%,-50%)
    font-size: 70px

  button
    position: absolute
    bottom: 20px
    left: 50%
    transform: translateX(-50%)
    width: 90%
